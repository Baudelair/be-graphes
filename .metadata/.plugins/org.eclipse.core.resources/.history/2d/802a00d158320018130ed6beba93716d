import java.io.IOException;
import java.util.Date;

public class tache_chrono extends tache {
	
	private int dateDebut;
	private int dateEcheance;
	private int date;
	
	DateTime dt = new DateTime();

	public tache_chrono(String descriptif, int bonus, int dateDebut, int dateEch) throws IOException {
		super(descriptif, bonus);
		this.dateDebut = dt.getHours();;
		this.dateEcheance = dateEch;
		this.date = 1;
	}
}